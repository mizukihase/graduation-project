<%= search_form_for q, url: (local_assigns[:search_url] || request.path), html: { class: "w-full max-w-3xl mx-auto mb-6" } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

    <div>
      <%= f.label :title_cont, 'タイトル', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.search_field :title_cont, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :author_cont, '著者', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.search_field :author_cont, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

  </div>

  <div class="mt-4 flex justify-end">
    <%= f.submit '検索', class: "bg-blue-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-blue-700 transition" %>
  </div>
<% end %>
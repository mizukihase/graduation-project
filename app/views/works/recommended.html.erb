<h1 class="text-3xl font-bold mb-6">おすすめの作品</h1>

<% if @productions.present? %>
  <% @productions.group_by(&:category).each do |category, productions| %>
    <section class="mb-8">
      <ul class="flex flex-wrap gap-6 list-none p-0">
        <% productions.each do |production| %>
          <li class="p-4 border rounded-lg shadow-sm hover:shadow-md transition w-64">
            <div class="card mb-3">
              <h5 class="card-title text-xl font-semibold text-gray-800 mb-2"><%= production.title %></h5>
              <p class="card-text mb-2 text-sm text-gray-600">
                著者: <%= production.author %>
              </p>
              <% if production.image_url.present? %>
                <%= image_tag production.image_url, class: "w-full h-auto rounded" %>
              <% else %>
                <p class="text-sm text-gray-400">画像がありません</p>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </section>
  <% end %>
<% else %>
  <p class="text-3xl font-bold mb-6"><%= current_user.name %>さんへのおすすめの作品がありません。</p>
<% end %>
<div class="relative h-screen">
  <div class="flex items-center justify-center h-full">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="text-3xl font-bold mb-6 text-center">パスワードの再設定</h1>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded px-3 py-2 w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "送信", class: "border border-gray-300 rounded px-3 py-2 w-full" %>
    </div>
    <% end %>

  </div>
</div>
